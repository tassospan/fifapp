%div.wrapper
    %div.container-fluid
        %div.row
            %div.col-md-3.side-bar
                %ul.nav.nav-pills.nav-stacked
                    %li= link_to 'Home', root_path
                    - Category.all.each do |category|
                        %li= link_to category.name, projects_path(category: category.name)
            %div.col-md-9.main-show
                %div.row
                    %div.panel.panel-default
                        %div.panel-body.panel-show
                            %h1 Basic Admin Panel
                    %hr
                    = link_to 'Add Project', new_project_path, class: "btn btn-primary btn-sm"
                    %hr
                    - @projects.each do |p|
                        %span.badge= p.title
                        = link_to 'Edit', edit_project_path(p), class: "btn btn-warning btn-xs"
                        = link_to 'Delete', p, method: :delete,data: { confirm: "Are You Sure ?" }, class: "btn btn-danger btn-xs"
                        %br
